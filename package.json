{
  "name": "nestjs-sandbox",
  "version": "0.0.1",
  "description": "Sandbox for NestJS",
  "author": "Eric Hobensack",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist coverage reports",
    "copy": "sh scripts/copy.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "npm run copy",
    "prestart": "npm run clean && npm run build",
    "start": "nest start",
    "start:dev": "npm run start -- --watch",
    "start:debug": "npm run start:dev -- --debug.",
    "start:prod": "node dist/server/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "@nestjs/graphql": "^7.9.4",
    "@nestjs/platform-express": "^7.6.5",
    "apollo-server-express": "^2.19.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "graphql": "^15.4.0",
    "graphql-tools": "^6.2.6",
    "helmet": "^3.23.3",
    "nocache": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.6",
    "@nestjs/testing": "^7.6.5",
    "@types/express": "^4.17.9",
    "@types/jest": "25.2.3",
    "@types/node": "^13.13.39",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../reports/coverage",
    "testEnvironment": "node"
  }
}
