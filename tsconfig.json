{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app": ["src/server/modules/app"],
      "@graphql": ["src/server/modules/graphql"],
      "@http": ["src/server/modules/http"],
      "@logger": ["src/server/modules/logger"],
      "@modules": ["src/server/modules"],
      "@utils": ["src/server/modules/http"],
      "@xsrf": ["src/server/modules/xsrf"]
    }
  }
}
